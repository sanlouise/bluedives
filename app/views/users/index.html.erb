<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1>All Members</h1>
    <p>The world's friendliest dive community.</p>
    
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
        <li>
          <div class="well row <%= cycle('white-bg', '') %>">
            <div class="col-sm-4 text-center">
              <% if user.profile.avatar %>
                <%= link_to user do %>
                  <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                <% end %>
                  <p class="small">
                    <%= user.profile.country %> 
                  </p>
              <% end %>
            </div>
            
            <div> 
              <%= link_to user do %>
                <h2 class="user-listing"><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
              <% end %>
              <p>
                <%= user.profile.job_title %> 
                <% if user.plan_id == 2 %> 
                  <span class="label label-danger">PRO</span> 
                <% end %>
              </p>

            </div>
          </div>
        </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>