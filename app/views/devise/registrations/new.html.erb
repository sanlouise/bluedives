<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center"> 
    <% if params[:plan] == '2' %>
      <h1>Scuba School Account</h1>
      <p>Sign up to be found and contacted by thousands of our global members. They can't wait to dive with you!</p>
      
      <p>$4.99 one time fee.</p>
    <% else %>
      <h1>Scuba Diver Account</h1>
      <p>See who loves diving as much as you do. </p>
      </br>
      <p>It's free!</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
    <h2>Sign up</h2>
      
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>